@model ProfileDeleteView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Headers.Profile</h5>
            <div class="widget-header-buttons">
                <authorize action="Edit">
                    <a asp-action="Edit" class="btn">
                        <span class="fa fa-pencil-alt"></span><span class="text">@Actions.Edit</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <input class="collapse" type="password" /> @* Forcing browser to not remember following form inputs *@
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-lg-7">
                        <button class="btn btn-primary">@Actions.Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
