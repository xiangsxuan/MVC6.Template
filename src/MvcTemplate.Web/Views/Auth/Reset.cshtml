@using MvcTemplate.Resources.Views.Auth.AccountResetView

@model AccountResetView

<div class="title text">@Pages.AuthReset</div>
<div class="separator"></div>

<form asp-antiforgery="true">
    <input class="hidden" type="password" /> @* Forcing browser to not remember following form inputs *@
    @Html.Partial("_AuthAlerts")

    <div class="auth-content">
        <div class="input-group">
            <span class="fa fa-lock"></span>
            <input asp-for="NewPassword" type="password" placeholder="@Titles.NewPassword" autocomplete="off" />
            <span class="input-error fa fa-warning"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">@Actions.Submit</button>
</form>

<div class="separator"></div>
