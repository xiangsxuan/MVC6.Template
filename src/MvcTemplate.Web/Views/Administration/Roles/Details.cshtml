@model RoleView

<div class="col-xs-12">
    <div class="widget-box readonly">
        <div class="widget-header">
            <span class="widget-header-icon fa fa-th-list"></span>
            <h5>@Headers.Role</h5>
            <div class="widget-header-buttons">
                <authorize action="Edit">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">
                        <i class="fa fa-pencil"></i><span class="text">@Actions.Edit</span>
                    </a>
                </authorize>
                <authorize action="Delete">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn">
                        <i class="fa fa-times"></i><span class="text">@Actions.Delete</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="Title"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <input asp-for="Title" class="form-control" autocomplete="off" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-xs-12 col-md-3 col-lg-2">
                    <label asp-for="Permissions"></label>
                </div>
                <div class="control-content col-xs-12 col-md-9 col-lg-5">
                    <div jstree-for="Permissions"></div>
                </div>
            </div>
        </div>
    </div>
</div>
