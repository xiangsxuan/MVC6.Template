{
  "Cookies": {
    "Antiforgery": {
      "Name": ".Web-Token"
    },
    "Auth": {
      "Name": ".Web-Auth"
    },
    "Session": {
      "Name": ".Web-Session"
    }
  },

  "Data": {
    "Connection": "Server=(localdb)\\mssqllocaldb;Database=Mvc6Template;Trusted_Connection=True;MultipleActiveResultSets=True"
  },

  "Languages": {
    "Path": "languages.config"
  },

  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "File": {
      "Path": "Logs/Log.txt",
      "RollSize": 5242880,
      "LogLevel": {
        "Default": "Error"
      }
    }
  },

  "Mail": {
    "Port": 587,
    "EnableSsl": true,
    "Host": "smtp.gmail.com",
    "Sender": "MVC.Template@gmail.com",
    "Password": "ChangeIt"
  },

  "SiteMap": {
    "Path": "Mvc.sitemap"
  }
